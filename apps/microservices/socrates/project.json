{
  "name": "socrates",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/microservices/socrates/socrates",
  "targets": {
    "docs": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pydoc-markdown -p socrates --render-toc > docs/source/api.md",
        "cwd": "apps/microservices/socrates"
      }
    },
    "lock": {
      "executor": "nx:run-commands",
      "options": {
        "command": "poetry lock --no-update",
        "cwd": "apps/microservices/socrates"
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "./scripts/check.sh -f {args.files} -c format",
        "cwd": "apps/microservices/socrates",
        "forwardAllArgs": true
      }
    },
    "add": {
      "executor": "@nxlv/python:add",
      "options": {}
    },
    "update": {
      "executor": "@nxlv/python:update",
      "options": {}
    },
    "remove": {
      "executor": "@nxlv/python:remove",
      "options": {}
    },
    "build": {
      "executor": "@nxlv/python:build",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "outputPath": "apps/socrates/dist",
        "publish": true,
        "lockedVersions": true,
        "bundleLocalDependencies": true
      }
    },
    "install": {
      "executor": "@nxlv/python:install",
      "options": {
        "silent": false,
        "args": "",
        "cacheDir": ".cache/pypoetry",
        "verbose": false,
        "debug": false
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/reports/apps/microservices/socrates/pylint.txt"],
      "options": {
        "command": "./scripts/check.sh -f {args.files} -c lint",
        "cwd": "apps/microservices/socrates"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "outputs": [
        "{workspaceRoot}/reports/apps/socrates/unittests",
        "{workspaceRoot}/coverage/apps/socrates"
      ],
      "options": {
        "command": "poetry run pytest tests/",
        "cwd": "apps/microservices/socrates"
      }
    },
    "tox": {
      "executor": "@nxlv/python:tox",
      "outputs": [
        "{workspaceRoot}/reports/apps/socrates/unittests",
        "{workspaceRoot}/coverage/apps/socrates"
      ],
      "options": {
        "silent": false,
        "args": ""
      }
    }
  },
  "tags": []
}
