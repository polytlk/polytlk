load('ext://namespace', 'namespace_create', 'namespace_inject')
load('ext://nerdctl', 'nerdctl_build')
load('ext://secret', 'secret_yaml_generic')

NAMESPACE = 'socrates'
namespace_create(NAMESPACE)

k8s_yaml(secret_yaml_generic('api-key-secret', from_env_file='./.env'))
k8s_yaml(namespace_inject(read_file('./tilt/kubernetes.yaml'), NAMESPACE))
k8s_resource('socrates-svc', labels=["openai"])

nerdctl_build('socrates-svc-img', '.',     
    live_update=[
        sync('.', '/code'),
        run('cd /code && poetry install --no-interaction --no-root --without dev',
            trigger=['./poetry.lock', './pyproject.toml']),
    ]
)


