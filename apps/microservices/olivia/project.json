{
  "name": "olivia",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/microservices/olivia/olivia",
  "targets": {
    "docs": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pydoc-markdown -p olivia --render-toc > docs/source/api.md",
        "cwd": "apps/microservices/olivia"
      }
    },
    "lock": {
      "executor": "nx:run-commands",
      "options": {
        "command": "poetry lock --no-update",
        "cwd": "apps/microservices/olivia"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "poetry run start",
        "cwd": "apps/microservices/olivia"
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "OLIVIA_FILES=$(echo {args.files} | tr ',' '\n' | grep 'olivia' | grep -v '.json' | sed 's#apps/microservices/olivia/##') && poetry run autopep8 --in-place $OLIVIA_FILES --verbose --exit-code",
        "cwd": "apps/microservices/olivia",
        "forwardAllArgs": true
      }
    },
    "add": {
      "executor": "@nxlv/python:add",
      "options": {}
    },
    "update": {
      "executor": "@nxlv/python:update",
      "options": {}
    },
    "remove": {
      "executor": "@nxlv/python:remove",
      "options": {}
    },
    "build": {
      "executor": "@nxlv/python:build",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "outputPath": "apps/microservices/olivia/dist",
        "publish": true,
        "lockedVersions": true,
        "bundleLocalDependencies": true
      }
    },
    "install": {
      "executor": "@nxlv/python:install",
      "options": {
        "silent": false,
        "args": "",
        "cacheDir": ".cache/pypoetry",
        "verbose": false,
        "debug": false
      }
    },
    "lint": {
      "executor": "@nxlv/python:flake8",
      "outputs": [
        "{workspaceRoot}/reports/apps/microservices/olivia/pylint.txt"
      ],
      "options": {
        "outputFile": "reports/apps/microservices/olivia/pylint.txt"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "outputs": [
        "{workspaceRoot}/reports/apps/microservices/olivia/unittests",
        "{workspaceRoot}/coverage/apps/microservices/olivia"
      ],
      "options": {
        "command": "poetry run pytest tests/",
        "cwd": "apps/microservices/olivia"
      }
    },
    "tox": {
      "executor": "@nxlv/python:tox",
      "outputs": [
        "{workspaceRoot}/reports/apps/microservices/olivia/unittests",
        "{workspaceRoot}/coverage/apps/microservices/olivia"
      ],
      "options": {
        "silent": false,
        "args": ""
      }
    }
  },
  "tags": []
}
