{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "auth-machine": ["libs/xstate/machines/auth-machine/src/index.ts"],
      "helm-templates": ["tools/helm-templates/src/index.ts"],
      "interpret-machine": [
        "libs/xstate/machines/interpret-machine/src/index.ts"
      ],
      "root-machine": [
        "libs/xstate/machines/root-machine/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
