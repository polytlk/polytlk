environments:
  default: {}
  development: {}
---
repositories:
- name: tyk-helm
  url: https://helm.tyk.io/public/helm/charts/

releases:
- name: tyk-deps
  namespace: tyk
  chart: ./dependencies/chart
  installed: true
  values:
  - dependencies/{{ .Environment.Name }}-values.yaml

- name: tyk-headless
  namespace: tyk
  chart: tyk-helm/tyk-headless
  version: 0.15.0
  installed: true
  values:
  - tyk-gw-{{ .Environment.Name }}-values.yaml
  - tyk-redis-{{ .Environment.Name }}-values.yaml
  needs:
  - tyk-deps

- name: tyk-operator
  namespace: tyk
  chart: tyk-helm/tyk-operator
  version: 0.18.0
  installed: true
  needs:
  - tyk-headless
